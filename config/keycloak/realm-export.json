    }
  ],
  "groups": [
    {
      "name": "basic-school",
      "attributes": {
        "education_level": ["basic"]
      }
    },
    {
      "name": "junior-high",
      "attributes": {
        "education_level": ["junior"]
      }
    },
    {
      "name": "senior-high",
