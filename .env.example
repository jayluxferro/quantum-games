# ===========================================
# Quantum Games Platform - Environment Config
# ===========================================

# General
NODE_ENV=development
LOG_LEVEL=debug

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=quantum_games
POSTGRES_USER=quantum
POSTGRES_PASSWORD=change_me_in_production

# Full connection string (used by apps)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===========================================
# Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ===========================================
# Keycloak (Authentication)
# ===========================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change_me_in_production
KEYCLOAK_URL=http://localhost:38080
KEYCLOAK_REALM=quantum-games
KEYCLOAK_CLIENT_ID=quantum-games-web
KEYCLOAK_CLIENT_SECRET=change_me_in_production

# ===========================================
# MinIO (S3-compatible storage)
# ===========================================
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=change_me_in_production
MINIO_ENDPOINT=localhost:9000
MINIO_BUCKET=quantum-games-assets

# ===========================================
# API Server (FastAPI)
# ===========================================
API_HOST=0.0.0.0
API_PORT=38000
API_SECRET_KEY=change_me_in_production_use_openssl_rand_hex_32
API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# Multiplayer Server (Colyseus)
# ===========================================
COLYSEUS_HOST=0.0.0.0
COLYSEUS_PORT=2567

# ===========================================
# LTI Service
# ===========================================
LTI_PORT=3001
LTI_PLATFORM_URL=
LTI_CLIENT_ID=
LTI_DEPLOYMENT_ID=

# ===========================================
# Frontend
# ===========================================
VITE_API_URL=http://localhost:38000
VITE_WS_URL=ws://localhost:2567
VITE_KEYCLOAK_URL=http://localhost:38080
VITE_KEYCLOAK_REALM=quantum-games
VITE_KEYCLOAK_CLIENT_ID=quantum-games-web

# ===========================================
# IBM Quantum (Optional)
# ===========================================
IBM_QUANTUM_TOKEN=
IBM_QUANTUM_CHANNEL=ibm_quantum

# ===========================================
# Traefik (Reverse Proxy) - Production
# ===========================================
DOMAIN=localhost
ACME_EMAIL=admin@example.com
